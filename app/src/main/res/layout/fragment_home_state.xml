<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_doorlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_doorlock_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="98:92"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.31"
        />

    <Button
        android:id="@+id/btn_fire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_fire_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="98:92"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.31"
        />

    <Button
        android:id="@+id/btn_cctv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_cctv_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="98:92"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.31"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_temp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_doorlock"
        app:layout_constraintRight_toRightOf="@id/btn_doorlock"
        app:layout_constraintTop_toTopOf="@id/btn_fall"
        app:layout_constraintBottom_toBottomOf="@id/btn_fall"
        android:background="@drawable/btn_centigrade_bg_n"
        >

        <ImageView
            android:id="@+id/img_temp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_centigrade_n"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/txt_temp"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:id="@+id/txt_temp"
            app:layout_constraintLeft_toRightOf="@id/img_temp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textColor="#777777"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_humidity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_fire"
        app:layout_constraintRight_toRightOf="@id/btn_fire"
        app:layout_constraintTop_toTopOf="@id/btn_fall"
        app:layout_constraintBottom_toBottomOf="@id/btn_fall"
        android:background="@drawable/btn_centigrade_bg_n"
        >
        <ImageView
            android:id="@+id/img_humidity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_wetness_n"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/txt_humidity"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:id="@+id/txt_humidity"
            app:layout_constraintLeft_toRightOf="@id/img_humidity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textColor="#777777"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ToggleButton
        android:id="@+id/btn_fall"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/btn_cctv"
        app:layout_constraintDimensionRatio="100:40"
        app:layout_constraintLeft_toLeftOf="@id/btn_cctv"
        app:layout_constraintRight_toRightOf="@id/btn_cctv"
        android:background="@drawable/home_fall_toggle_selector"
        android:text=""
        android:textOn=""
        android:textIsSelectable="false"
        android:textOff=""
        android:layout_width="0dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
